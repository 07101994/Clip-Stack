<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/activity_main_card_time"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/primary"
            android:text="Sun Jan 22 00:00:00 GMT+8:00 2000"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activity_main_card_text"
                android:gravity="center_vertical|start"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="hello, this is a text test"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:textColor="@color/secondary_text_default_material_light"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="32dp" />

            <ImageButton
                android:id="@+id/activity_main_card_share_button"
                android:background="#00000000"
                android:src="@drawable/ic_action_share"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerInside"
                android:contentDescription="@string/clip_notification_share_button" />

            <ImageButton
                android:id="@+id/activity_main_card_copy_button"
                android:background="#00000000"
                android:src="@drawable/ic_action_copy"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerInside"
                android:contentDescription="@string/clip_notification_copy_button" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>