<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clip_line"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/each_item"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/clip_text"
            android:gravity="center_vertical|start"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="text test test"
            android:textSize="14sp"
            android:textColor="@color/divider"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/clip_copy_button"
            android:background="#00000000"
            android:src="@drawable/ic_notification_action_copy"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/clip_notification_copy_button" />

    </LinearLayout>

    <ImageView
        android:id="@+id/notification_item_up_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/each_item"
        android:background="@color/secondary_text" />

    <ImageView
        android:id="@+id/notification_item_down_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_above="@id/each_item"
        android:background="@color/secondary_text" />

</RelativeLayout>


